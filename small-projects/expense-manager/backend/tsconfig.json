{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist", // Corrected from "./srtc" to "./dist"
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"],
			"@common": ["../common/"]
		}
	},
	"include": ["src", "functions"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../common",
			"prepend": false
		}
	]
}
