{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"],
			"@common/*": ["../common/src/*"]
		}
	},
	"include": [
		"src",
		"**/*.d.ts", // Ensures all .d.ts files are included
		"../common/src/**/*" // Files from the common directory
	]
}
