{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src"],
	"references": [
        {
            "path": "../common",
            // add 'prepend' if you want to include the referenced project in your output file
            "prepend": false
        }
    ]
}
